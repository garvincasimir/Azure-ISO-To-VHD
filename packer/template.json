{
    "builders":
    [
      {
        "type": "qemu",
        "iso_url": "https://repo.almalinux.org/almalinux/8.3-beta/isos/x86_64/AlmaLinux-8.3-beta-1-x86_64-minimal.iso",
        "iso_checksum": "d72c5be79b8d1dabdabbdf3fcb58813cc3a77659d8519646ba5fe78097f0ceaf",
        "iso_checksum_type": "sha256",
        "output_directory": "disk",
        "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
        "disk_size": 5120,
        "format": "raw",
        "headless": true,
        "accelerator": "kvm",
        "http_directory": "/root/config",
        "ssh_username": "root",
        "ssh_password": "password",
        "ssh_timeout": "25m",
        "vm_name": "baked",
        "cpus":4,
        "memory":8192,
        "net_device": "virtio-net",
        "disk_interface": "virtio",
        "boot_wait": "30s",
        "boot_command": [
          "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/almalinux-8.3-ks.cfg<enter><wait>"
        ]
      }
    ],
    "provisioners": [
      {
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
        "script": "/root/bake-azure.sh",
        "type": "shell",
        "expect_disconnect": true
      }
    ]
}
