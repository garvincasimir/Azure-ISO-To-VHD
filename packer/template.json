{
  "builders":
  [
    {
      "type": "qemu",
      "iso_url": "https://download.rockylinux.org/pub/rocky/8.3/isos/x86_64/Rocky-8.3-x86_64-minimal.iso",
      "iso_checksum": "fba979fde098027df79b4b686359a8e22daad7f6b269f34887dbe3a53f7cf73a",
      "iso_checksum_type": "sha256",
      "output_directory": "disk",
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
      "disk_size": 5120,
      "format": "raw",
      "headless": true,
      "accelerator": "kvm",
      "http_directory": "/root/config",
      "ssh_username": "root",
      "ssh_password": "password",
      "ssh_timeout": "25m",
      "vm_name": "baked",
      "cpus":4,
      "memory":8192,
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "30s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/rocky-8.3-ks.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "script": "/root/bake-azure.sh",
      "type": "shell",
      "expect_disconnect": true
    }
  ]
}